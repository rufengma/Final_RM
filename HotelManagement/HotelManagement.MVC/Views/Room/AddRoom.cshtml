@model HotelManagement.Core.Models.AddRoomModel
@{
    ViewData["Title"] = "addRoom";
}
<div class="row">
    <div class="col-md-3">
        <h3>Add Room</h3>
        <form asp-action="AddRoom">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="RTCode">Roomtype Code</label>
                <input asp-for="RTCode" class="form-control" />
                <span asp-validation-for="RTCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="status">Room Status</label>
                <input asp-for="status" class="form-control">
                <span asp-validation-for="status" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Add</button>
        </form>

    </div>

    <div class="col-md-3">
        <h3>Update Room</h3>
        <form asp-action="UpdateRoom">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Id">Room Id</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RTCode">Roomtype Code</label>
                <input asp-for="RTCode" class="form-control">
                <span asp-validation-for="RTCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="status">Room Status</label>
                <input asp-for="status" class="form-control">
                <span asp-validation-for="status" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>

    </div>
    <div class="col-md-3">
        <h3>Delete Room</h3>
        <form asp-action="DeleteRoom">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Id">Room Id</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Delete</button>
        </form>
    </div>
    <div class="col-md-3">
        <h3>Search Room</h3>
        <form asp-action="SearchRoom">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Id">Room Id</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
</div>