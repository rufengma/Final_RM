@model List<HotelManagement.Core.Entities.Customer>
@{
    ViewData["Title"] = "Home Page";
}

<div class="col-12">
    <h2>Customers</h2>
    <table class="table">
        <tbody>
            <tr>
                <td>Id</td>
                <td>Customer Name</td>
                <td>Room Number</td>
                <td>Check in date/time</td>
            </tr>
            @foreach (var customer in Model)
            {
                <tr>
                    <partial name="_CustomerCard" model="customer">
                </tr>
            }
        </tbody>
    </table>
</div>
